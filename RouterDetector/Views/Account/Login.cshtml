@{
    ViewData["Title"] = "Login";
    Layout = null; // Remove layout to hide nav
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <title>Login</title>
    <style>
        body {
            background: linear-gradient(135deg, #007bff 0%, #6a11cb 100%);
        }
        .login-card {
            border-radius: 1rem;
            box-shadow: 0 4px 24px rgba(0,0,0,0.15);
            background: #fff;
        }
        .login-logo {
            font-size: 3rem;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="login-card card p-4 w-100" style="max-width: 400px;">
            <div class="text-center mb-3">
                <span class="login-logo"><i class="fa-solid fa-shield-virus"></i></span>
            </div>
            <h2 class="text-center mb-4">Login</h2>
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="username" required autofocus />
                </div>
                <div class="form-group mb-3">
                    <label for="password">Password</label>
                    <div class="input-group">
                        <input type="password" class="form-control password-toggle-field" id="password" name="password" required />
                        <span class="input-group-text bg-white border-start-0" style="cursor:pointer;">
                            <i class="fa-solid fa-eye password-toggle-icon"></i>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
            <div class="text-danger mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
            <p class="mt-3 text-center">Don't have an account? <a asp-action="Register">Register here</a>.</p>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/6e0e4b8b7b.js" crossorigin="anonymous"></script>
    <script>
        document.querySelectorAll('.password-toggle-icon').forEach(function(icon) {
            icon.addEventListener('click', function () {
                var input = this.closest('.input-group').querySelector('.password-toggle-field');
                if (input) {
                    if (input.type === 'password') {
                        input.type = 'text';
                        this.classList.remove('fa-eye');
                        this.classList.add('fa-eye-slash');
                    } else {
                        input.type = 'password';
                        this.classList.remove('fa-eye-slash');
                        this.classList.add('fa-eye');
                    }
                }
            });
        });
    </script>
</body>
</html> 