@{
    ViewData["Title"] = "Register";
    Layout = null; // Remove layout to hide nav
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <title>Register</title>
    <style>
        body {
            background: linear-gradient(135deg, #007bff 0%, #6a11cb 100%);
        }
        .register-card {
            border-radius: 1rem;
            box-shadow: 0 4px 24px rgba(0,0,0,0.15);
            background: #fff;
        }
        .register-logo {
            font-size: 3rem;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="register-card card p-4 w-100" style="max-width: 400px;">
            <div class="text-center mb-3">
                <span class="register-logo"><i class="fa-solid fa-shield-virus"></i></span>
            </div>
            <h2 class="text-center mb-4">Register</h2>
            <form asp-action="Register" method="post">
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required />
                </div>
                <div class="form-group mb-3">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="username" required autofocus />
                </div>
                <div class="form-group mb-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>
            <div class="text-danger mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
            <p class="mt-3 text-center">Already have an account? <a asp-action="Login">Login here</a>.</p>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/6e0e4b8b7b.js" crossorigin="anonymous"></script>
</body>
</html> 